<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper" htmlClass=""/>
        <referenceContainer name="header.container" htmlTag="header" htmlId="home" htmlClass="">
            <referenceContainer name="header-wrapper" htmlTag="div" htmlClass="main-navigation">
                <container name="header-wrapper.container.row" htmlClass="container" htmlTag="div">
                    <container name="header-wrapper.container.row.logo" htmlClass="row" htmlTag="div">
                        <referenceBlock name="logo" before="-">
                            <arguments>
                                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                            </arguments>
                        </referenceBlock>
                        <container name="mainmenu-area" htmlClass="col-xl-10 col-lg-9 col-md-9" htmlTag="div" after="-">
                            <container name="mainmenu-area.click" htmlClass="main-menu f-right" htmlTag="div">
                                <block class="Magento\Framework\View\Element\Template" name="click.navigation.sections" template="Magento_Theme::html/sections.phtml"/>
                            </container>
                            <container name="mobile-menu" htmlClass="mobile-menu" htmlTag="div"/>
                            <container name="search.box.area" htmlTag="div" htmlClass="search-box-area" >
                            </container>
                        </container>
                    </container>
                </container>
            </referenceContainer>
        </referenceContainer>
        <referenceContainer name="header.panel.wrapper" remove="true"/>
        <referenceBlock name="minicart" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true"/>
        <move element="logo" destination="header-wrapper.container.row.logo" before="-" />
        <move element="top.search" destination="search.box.area" after="-"/>
    </body>
</page>
